{
  "compilerOptions": {
    "types": ["vitest/globals"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": "./src",
    "target": "ES2022",
    "paths": {
      "@features/*": ["features/*"],
      "@db/*": ["db/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"]
    },
    "forceConsistentCasingInFileNames": true, // force exact name for imported modules's file's name
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "noEmit": true, // type check the code without generating js
    "allowImportingTsExtensions": true, // needed when noEmit
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true, // Skips type-checking .d.ts files from node_module
    "resolveJsonModule": true
  },
  "include": ["src", "__tests__", "test"],
  "exclude": ["node_modules", "dist"]
}
